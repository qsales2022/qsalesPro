require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/react-native-permissions/scripts/setup.rb'
# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, '15.1' # ✅ Set to your supported iOS version
# platform :ios, '14.0' # ✅ Changed to support iOS 14.0+ for ATT

prepare_react_native_project!

setup_permissions(['Notifications','AppTrackingTransparency']) # Uncomment this line if you need permissions
# setup_permissions(['Notifications', 'AppTrackingTransparency'])


linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'Qsales' do
  config = use_native_modules!

  # ✅ Firebase Configuration
  pod 'Firebase', :modular_headers => true
  pod 'FirebaseCoreInternal', :modular_headers => true
  pod 'GoogleUtilities', :modular_headers => true
  pod 'FirebaseCore', :modular_headers => true
  pod 'Firebase/Analytics', '10.24.0'

  # # ✅ Facebook SDK (stable versions)
pod 'FBSDKCoreKit', '~> 18.0.0'
pod 'FBSDKLoginKit', '~> 18.0.0'
pod 'FBSDKShareKit', '~> 18.0.0'
# pod 'FBSDKGamingServiceKit','~> 18.0.0'



 



  # ✅ Additional useful pods
  pod 'RNCAsyncStorage', :path => '../node_modules/@react-native-async-storage/async-storage'

  use_react_native!(
    :path => config[:reactNativePath],
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    :fabric_enabled => false # ✅ Disable new architecture unless needed
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

    # ✅ Deployment target + FBSDK compatibility fix
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.1'

       if target.name.include?('FBSDK')
          config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
          config.build_settings['CLANG_WARN_STRICT_PROTOTYPES'] = 'NO'
        end
        #     config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
        #           if target.respond_to?(:product_type) && target.product_type == "com.apple.product-type.bundle"
        #   config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        # end

      end
    end
  end
end
